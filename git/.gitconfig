[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[user]
	name = Fern Sanchez
	email = me@fjorn.dev
	username = ferntheplant
[credential "https://github.com"]
	helper =
	helper = !gh auth git-credential
[init]
	defaultBranch = main
[alias]
    wt = worktree
	st = status
	ci = commit -v
	pf = push --no-verify
	co = checkout
	br = branch
	unstage = reset HEAD --
	lola = log --oneline --all --graph --decorate
	lol = log --oneline --graph --decorate
	undo = reset --soft HEAD^
    cleanup = "!git checkout main && git pull && git fetch --prune && git for-each-ref --format=\"%(refname:short) %(upstream:track)\" refs/heads | grep \"\\[gone\\]\" | cut -d\" \" -f1 | xargs -r git branch -D"
[core]
	editor = hx
	pager = delta
[interactive]
	navigate = true
	singlekey = true
[pull]
	rebase = true
[rebase]
	autoSquash = true
	updateRefs = true
[diff]
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
	algorithm = histogram
	context = 3
	renames = copies
	interHunkContect = 10
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[help]
	autocorrect = prompt
[commit]
	verbose = true
[rerere]
	enabled = true
	autoupdate = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[advice]
	addIgnoredFile = false
[credential "https://gist.github.com"]
	helper =
	helper = !gh auth git-credential
[merge]
	conflictstyle = zdiff3
[include]
	path = "~/dotfiles/git/catppuccin.gitconfig"
[delta]
    features = catppuccin-macchiato
	side-by-side = true
	line-numbers = true
[status]
	branch = true
	showStash = true
[diff-so-fancy]
	markEmptyLines = false
[log]
	abbrevCommit = true
